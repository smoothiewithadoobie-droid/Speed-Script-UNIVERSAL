-- FEATURES PAGE
local featPage = createPage("Features")

local toggles = {}

local function createToggle(parent, text, featureName, default, callback)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0.9, 0, 0, 60)
    frame.BackgroundColor3 = pal.button
    frame.Parent = parent
    addCorner(frame, 8)

    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.6, 0, 1, 0)
    btn.BackgroundColor3 = default and pal.success or pal.danger
    btn.Text = text .. " [" .. (default and "ON" or "OFF") .. "]"
    btn.Font = Enum.Font.GothamMedium
    btn.TextColor3 = pal.text
    btn.TextSize = 18
    btn.Parent = frame
    addCorner(btn, 8)
    
    local keyBtn = Instance.new("TextButton")
    keyBtn.Size = UDim2.new(0.35, 0, 1, 0)
    keyBtn.Position = UDim2.fromScale(0.65, 0)
    keyBtn.BackgroundColor3 = pal.panel
    keyBtn.Text = state.keybinds[featureName].Name
    keyBtn.Font = Enum.Font.Gotham
    keyBtn.TextColor3 = pal.accent
    keyBtn.TextSize = 16
    keyBtn.Parent = frame
    addCorner(keyBtn, 8)

    local function toggle()
        local featureKey = featureName:lower() == "invis" and "invis" or featureName:lower() == "walkspeed" and "wsEnabled" or featureName:lower() == "jumppower" and "jpEnabled" or featureName:lower()
        state[featureKey] = not state[featureKey]
        btn.BackgroundColor3 = state[featureKey] and pal.success or pal.danger
        btn.Text = text .. " [" .. (state[featureKey] and "ON" or "OFF") .. "]"
        callback(state[featureKey])
    end

    btn.MouseButton1Click:Connect(toggle)
    
    keyBtn.MouseButton1Click:Connect(function()
        keyBtn.Text = "..."
        state.listening = featureName
    end)

    toggles[featureName] = {Toggle = toggle, KeyBtn = keyBtn, Btn = btn}
end

local function createSlider(parent, text, min, max, default, callback)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0.9, 0, 0, 60)
    frame.BackgroundColor3 = pal.button
    frame.Parent = parent
    addCorner(frame, 8)

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 0.5, 0)
    label.BackgroundTransparency = 1
    label.Text = text .. ": " .. default
    label.Font = Enum.Font.Gotham
    label.TextColor3 = pal.text
    label.TextSize = 16
    label.Parent = frame

    local sliderBg = Instance.new("Frame")
    sliderBg.Size = UDim2.new(0.8, 0, 0.2, 0)
    sliderBg.Position = UDim2.fromScale(0.1, 0.7)
    sliderBg.BackgroundColor3 = pal.sidebar
    sliderBg.Parent = frame
    addCorner(sliderBg, 4)

    local fill = Instance.new("Frame")
    fill.Size = UDim2.fromScale((default-min)/(max-min), 1)
    fill.BackgroundColor3 = pal.accent
    fill.Parent = sliderBg
    addCorner(fill, 4)

    local trigger = Instance.new("TextButton")
    trigger.Size = UDim2.fromScale(1, 1)
    trigger.BackgroundTransparency = 1
    trigger.Text = ""
    trigger.Parent = sliderBg

    local function update(input)
        local pos = math.clamp((input.Position.X - sliderBg.AbsolutePosition.X) / sliderBg.AbsoluteSize.X, 0, 1)
        local val = math.floor(min + (max - min) * pos)
        fill.Size = UDim2.fromScale(pos, 1)
        label.Text = text .. ": " .. val
        callback(val)
    end

    local dragging = false
    trigger.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true update(input) end
    end)
    UIS.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
    UIS.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then update(input) end
    end)

    return {Fill = fill, Label = label}
end

createToggle(featPage, "Noclip", "Noclip", false, toggleNoclip)
createToggle(featPage, "Fly", "Fly", false, toggleFly)
