changeInput.Text = ""
changeInput.PlaceholderText = "New Amount"
changeInput.Font = Enum.Font.Gotham
changeInput.TextColor3 = pal.text
changeInput.TextSize = 18
changeInput.Parent = currPage
addCorner(changeInput, 8)

local scanBtn = Instance.new("TextButton")
scanBtn.Size = UDim2.new(0.9, 0, 0, 50)
scanBtn.BackgroundColor3 = pal.accent
scanBtn.Text = "Scan & Change"
scanBtn.Font = Enum.Font.GothamBold
scanBtn.TextColor3 = pal.text
scanBtn.TextSize = 18
scanBtn.Parent = currPage
addCorner(scanBtn, 8)

scanBtn.MouseButton1Click:Connect(function()
    local targetVal = tonumber(amountInput.Text)
    local newVal = tonumber(changeInput.Text)
    if not targetVal or not newVal then return end
    
    scanBtn.Text = "Scanning..."
    task.wait(0.5)
    
    local found = 0
    for _, v in pairs(player:GetDescendants()) do
        if (v:IsA("IntValue") or v:IsA("NumberValue")) and v.Value == targetVal then
            v.Value = newVal
            found += 1
        end
    end
    for _, v in pairs(ReplicatedStorage:GetDescendants()) do
         if (v:IsA("IntValue") or v:IsA("NumberValue")) and v.Value == targetVal then
            v.Value = newVal
            found += 1
        end
    end
    scanBtn.Text = "Found & Changed: " .. found
    task.wait(2)
    scanBtn.Text = "Scan & Change"
end)

-- CREDITS PAGE
local credPage = createPage("Credits")
local credText = Instance.new("TextLabel")
credText.Text = "Created by Smoothie"
credText.Font = Enum.Font.GothamBold
credText.TextColor3 = pal.text
credText.TextSize = 24
credText.Size = UDim2.new(1, 0, 0, 80)
credText.BackgroundTransparency = 1
credText.Parent = credPage

-- Initialize
for _, name in ipairs({"Main", "Features", "Currency", "Credits"}) do
    createTabBtn(name)
end
setTab("Main")

-- Global Inputs
UIS.InputBegan:Connect(function(input, gp)
    if state.listening then
        if input.UserInputType == Enum.UserInputType.Keyboard then
            state.keybinds[state.listening] = input.KeyCode
            toggles[state.listening].KeyBtn.Text = input.KeyCode.Name
            state.listening = nil
        end
        return
    end

    if gp then return end
    
    if input.KeyCode == Enum.KeyCode.RightControl then
        main.Visible = not main.Visible
    end

    for feature, key in pairs(state.keybinds) do
        if input.KeyCode == key then
            if toggles[feature] and toggles[feature].Toggle then
                toggles[feature].Toggle()
            elseif toggles[feature] and toggles[feature].Action then
                toggles[feature].Action()
            end
        end
    end
end)
