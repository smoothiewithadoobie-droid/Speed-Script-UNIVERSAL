local minBtn = Instance.new("TextButton")
minBtn.Size = UDim2.fromOffset(40, 40)
minBtn.Position = UDim2.new(0, 0, 0, 0)
minBtn.BackgroundColor3 = pal.button
minBtn.Text = "-"
minBtn.Font = Enum.Font.GothamBold
minBtn.TextColor3 = pal.text
minBtn.TextSize = 24
minBtn.Parent = controls
addCorner(minBtn, 8)

minBtn.MouseButton1Click:Connect(function()
    state.minimized = not state.minimized
    
    local targetSize = state.minimized and UDim2.fromOffset(600, 60) or UDim2.fromOffset(600, 400)
    TweenService:Create(main, TweenInfo.new(0.3), {Size = targetSize}):Play()
    
    for _, v in pairs(main:GetChildren()) do
        if v.Name ~= "Sidebar" and v ~= controls then
            v.Visible = not state.minimized
        end
    end
    
    local sb = main:FindFirstChild("Sidebar")
    if sb then
        TweenService:Create(sb, TweenInfo.new(0.3), {Size = state.minimized and UDim2.new(0, 150, 0, 60) or UDim2.new(0, 150, 1, 0)}):Play()
        local bh = sb:FindFirstChild("btnHolder")
        if bh then bh.Visible = not state.minimized end
    end
end)

-- Dragging
local dragging, dragStart, startPos
main.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = main.Position
    end
end)
UIS.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)
UIS.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
end)

