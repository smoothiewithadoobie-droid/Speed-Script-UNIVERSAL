    local targetName = kickInput.Text:lower()
    for _, p in pairs(Players:GetPlayers()) do
        if p.Name:lower():match(targetName) or p.DisplayName:lower():match(targetName) then
            p:Destroy()
            kickBtn.Text = "Removed " .. p.Name
            task.wait(1.5)
            kickBtn.Text = "Kick Player (Client)"
            return
        end
    end
end)

