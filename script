tpBtn.BackgroundColor3 = pal.panel
tpBtn.Text = "Teleport to Mouse"
tpBtn.Font = Enum.Font.GothamMedium
tpBtn.TextColor3 = pal.text
tpBtn.TextSize = 16
tpBtn.Parent = tpFrame
addCorner(tpBtn, 6)
tpBtn.MouseButton1Click:Connect(teleportToMouse)

local tpKeyBtn = Instance.new("TextButton")
tpKeyBtn.Size = UDim2.new(0.35, 0, 1, 0)
tpKeyBtn.Position = UDim2.fromScale(0.65, 0)
tpKeyBtn.BackgroundColor3 = pal.panel
