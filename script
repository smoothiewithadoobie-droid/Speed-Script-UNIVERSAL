tpKeyBtn.Font = Enum.Font.Gotham
tpKeyBtn.TextColor3 = pal.accent
tpKeyBtn.TextSize = 14
tpKeyBtn.Parent = tpFrame
addCorner(tpKeyBtn, 6)

tpKeyBtn.MouseButton1Click:Connect(function()
    tpKeyBtn.Text = "..."
    state.listening = "Teleport"
end)

toggles.Teleport = {Action = teleportToMouse, KeyBtn = tpKeyBtn}

