local banBtn = Instance.new("TextButton")
banBtn.Size = UDim2.new(0.9, 0, 0, 45)
banBtn.BackgroundColor3 = pal.danger
banBtn.Text = "Add Ban Hammer"
banBtn.Font = Enum.Font.GothamBold
banBtn.TextColor3 = pal.text
banBtn.TextSize = 18
banBtn.Parent = featPage
addCorner(banBtn, 8)
banBtn.MouseButton1Click:Connect(function()
    local backpack = player:WaitForChild("Backpack")
    local tool = Instance.new("Tool")
    tool.Name = "Ban Hammer"
    tool.RequiresHandle = true
    
    local handle = game:GetObjects("rbxassetid://114452163024876")[1]
    if handle then
        handle.Name = "Handle"
        handle.Parent = tool
    else
        handle = Instance.new("Part")
        handle.Name = "Handle"
        handle.Size = Vector3.new(1, 4, 1)
        handle.Parent = tool
    end
    
    tool.Activated:Connect(function()
        local character = tool.Parent
        if not character:IsA("Model") then return end
        
        local hitPart = mouse.Target
        if hitPart and hitPart.Parent:FindFirstChild("Humanoid") then
            local targetPlayer = Players:GetPlayerFromCharacter(hitPart.Parent)
            if targetPlayer then
                targetPlayer:Kick("Banned by Smoothie's Ban Hammer")
            end
        end
    end)
    
    tool.Parent = backpack
end)

