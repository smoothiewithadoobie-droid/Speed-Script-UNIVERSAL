task.spawn(function()
    while task.wait(1) do
        local fps = math.floor(1/RunService.RenderStepped:Wait())
        local ping = math.floor(player:GetNetworkPing() * 2000)
        stats.Text = string.format("FPS: %d | Ping: %dms", fps, ping)
    end
end)

-- FEATURES PAGE
local featPage = createPage("Features")

local toggles = {}

local function createToggle(parent, text, featureName, default, callback)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0.9, 0, 0, 50)
    frame.BackgroundColor3 = pal.button
    frame.Parent = parent
    addCorner(frame, 6)

    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.6, 0, 1, 0)
    btn.BackgroundColor3 = default and pal.success or pal.danger
    btn.Text = text .. " [" .. (default and "ON" or "OFF") .. "]"
    btn.Font = Enum.Font.GothamMedium
    btn.TextColor3 = pal.text
    btn.TextSize = 16
    btn.Parent = frame
    addCorner(btn, 6)
    
    local keyBtn = Instance.new("TextButton")
    keyBtn.Size = UDim2.new(0.35, 0, 1, 0)
    keyBtn.Position = UDim2.fromScale(0.65, 0)
    keyBtn.BackgroundColor3 = pal.panel
    keyBtn.Text = state.keybinds[featureName].Name
    keyBtn.Font = Enum.Font.Gotham
    keyBtn.TextColor3 = pal.accent
    keyBtn.TextSize = 14
    keyBtn.Parent = frame
    addCorner(keyBtn, 6)

    local function toggle()
        state[featureName:lower()] = not state[featureName:lower()]
        btn.BackgroundColor3 = state[featureName:lower()] and pal.success or pal.danger
        btn.Text = text .. " [" .. (state[featureName:lower()] and "ON" or "OFF") .. "]"
        callback(state[featureName:lower()])
    end

    btn.MouseButton1Click:Connect(toggle)
    
    keyBtn.MouseButton1Click:Connect(function()
        keyBtn.Text = "..."
        state.listening = featureName
    end)

    toggles[featureName] = {Toggle = toggle, KeyBtn = keyBtn}
end

createToggle(featPage, "Noclip", "Noclip", false, toggleNoclip)
createToggle(featPage, "Fly", "Fly", false, toggleFly)

local tpFrame = Instance.new("Frame")
tpFrame.Size = UDim2.new(0.9, 0, 0, 50)
tpFrame.BackgroundColor3 = pal.button
tpFrame.Parent = featPage
addCorner(tpFrame, 6)

local tpBtn = Instance.new("TextButton")
