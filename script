-- CURRENCY PAGE
local currPage = createPage("Currency")

local scanLabel = Instance.new("TextLabel")
scanLabel.Text = "Enter amount of currency to scan for:"
scanLabel.Font = Enum.Font.Gotham
scanLabel.TextColor3 = pal.text
scanLabel.TextSize = 16
scanLabel.Size = UDim2.new(0.9, 0, 0, 30)
scanLabel.BackgroundTransparency = 1
scanLabel.Parent = currPage

local amountInput = Instance.new("TextBox")
amountInput.Size = UDim2.new(0.9, 0, 0, 40)
amountInput.BackgroundColor3 = pal.button
amountInput.Text = ""
amountInput.PlaceholderText = "Current Amount"
amountInput.Font = Enum.Font.Gotham
amountInput.TextColor3 = pal.text
amountInput.TextSize = 16
amountInput.Parent = currPage
addCorner(amountInput, 6)

local changeInput = Instance.new("TextBox")
changeInput.Size = UDim2.new(0.9, 0, 0, 40)
changeInput.BackgroundColor3 = pal.button
changeInput.Text = ""
changeInput.PlaceholderText = "New Amount"
changeInput.Font = Enum.Font.Gotham
changeInput.TextColor3 = pal.text
changeInput.TextSize = 16
changeInput.Parent = currPage
addCorner(changeInput, 6)

local scanBtn = Instance.new("TextButton")
scanBtn.Size = UDim2.new(0.9, 0, 0, 40)
scanBtn.BackgroundColor3 = pal.accent
scanBtn.Text = "Scan & Change"
scanBtn.Font = Enum.Font.GothamBold
scanBtn.TextColor3 = pal.text
scanBtn.TextSize = 16
scanBtn.Parent = currPage
addCorner(scanBtn, 6)

scanBtn.MouseButton1Click:Connect(function()
    local targetVal = tonumber(amountInput.Text)
    local newVal = tonumber(changeInput.Text)
    if not targetVal or not newVal then return end
    
    scanBtn.Text = "Scanning..."
    task.wait(0.5)
    
    local found = 0
    for _, v in pairs(player:GetDescendants()) do
        if (v:IsA("IntValue") or v:IsA("NumberValue")) and v.Value == targetVal then
            v.Value = newVal
            found += 1
        end
    end
    for _, v in pairs(ReplicatedStorage:GetDescendants()) do
         if (v:IsA("IntValue") or v:IsA("NumberValue")) and v.Value == targetVal then
            v.Value = newVal
            found += 1
        end
    end
    scanBtn.Text = "Found & Changed: " .. found
    task.wait(2)
    scanBtn.Text = "Scan & Change"
end)

